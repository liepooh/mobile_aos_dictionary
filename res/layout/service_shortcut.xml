<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/service_shortcut"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="1.0"
    android:background="#000000"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/button_shortcut_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button54"
        android:src="@drawable/close48" />

    <ImageButton
        android:id="@+id/button_shortcut_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button54"
        android:src="@drawable/finder48" />

    <ImageButton
        android:id="@+id/button_shortcut_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button54"
        android:src="@drawable/arrow48" />

</LinearLayout>